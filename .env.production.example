# ============================================
# PRODUCTION ENVIRONMENT CONFIGURATION
# Copy this to .env on production server
# ============================================

APP_NAME="PT. Berkah Mandiri Globalindo"
APP_ENV=production
APP_KEY=base64:GENERATE_NEW_KEY_WITH_php_artisan_key_generate
APP_DEBUG=false
APP_URL=https://berkahmandiri.co.id

APP_LOCALE=id
APP_FALLBACK_LOCALE=id
APP_FAKER_LOCALE=id_ID

APP_MAINTENANCE_DRIVER=file

# Higher rounds for production security
BCRYPT_ROUNDS=12

LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=error

# Database - UPDATE WITH PRODUCTION CREDENTIALS
DB_CONNECTION=mysql
DB_HOST=localhost
DB_PORT=3306
DB_DATABASE=your_database
DB_USERNAME=your_username
DB_PASSWORD=your_secure_password

# Session Security - IMPORTANT FOR PRODUCTION
SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=true
SESSION_PATH=/
SESSION_DOMAIN=berkahmandiri.co.id
SESSION_SECURE_COOKIE=true

BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local
QUEUE_CONNECTION=database

# Use Redis if available for better performance
# CACHE_STORE=redis
CACHE_STORE=database

# Mail Configuration - UPDATE WITH YOUR SMTP
MAIL_MAILER=smtp
MAIL_HOST=mail.berkahmandiri.co.id
MAIL_PORT=465
MAIL_USERNAME=noreply@berkahmandiri.co.id
MAIL_PASSWORD=your_mail_password
MAIL_ENCRYPTION=ssl
MAIL_FROM_ADDRESS="noreply@berkahmandiri.co.id"
MAIL_FROM_NAME="${APP_NAME}"

# Disable debug tools in production
DEBUGBAR_ENABLED=false

# ============================================
# SECURITY NOTES:
# ============================================
# 1. APP_DEBUG must be false
# 2. SESSION_ENCRYPT should be true
# 3. SESSION_SECURE_COOKIE should be true (HTTPS)
# 4. Generate new APP_KEY before first deploy
# 5. Use strong passwords for DB and mail
# 6. Never commit this file with real credentials
# ============================================
